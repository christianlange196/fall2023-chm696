\begin_inset Formula 
\begin{align}
\left\langle n\right|E^{2}\left|n\right\rangle  & =E_{0}^{2}\left\langle n\right|\left(aae^{-2i\chi}+a^{\dagger}a^{\dagger}e^{2i\chi}+aa^{\dagger}+a^{\dagger}a\right)\left|n\right\rangle \\
 & =E_{0}^{2}\left\langle n\right|aa^{\dagger}+a^{\dagger}a\left|n\right\rangle \\
 & =E_{0}^{2}\left(2n+1\right)
\end{align}

\end_inset


\begin_inset Formula 
\begin{align}
\left(\Delta E\right)^{2} & =\left\langle E^{2}\right\rangle -\left\langle E\right\rangle ^{2}\\
 & =E_{0}\left(2n+1\right)
\end{align}

\end_inset

Expectation values for coherent states.
 Note that 
\begin_inset Formula $\left\langle \alpha\right|a^{\dagger}=\alpha^{*}\left\langle \alpha\right|$
\end_inset

.
 Note also that, since 
\begin_inset Formula $\left[a,a^{\dagger}\right]=1\rightarrow$
\end_inset

, 
\begin_inset Formula $\left\langle \alpha\right|aa^{\dagger}\left|\alpha\right\rangle =\left\langle \alpha\right|1+a^{\dagger}a\left|\alpha\right\rangle =1+\left|\alpha\right|^{2}$
\end_inset


\begin_inset Formula 
\begin{align}
\left\langle \alpha\right|E\left|\alpha\right\rangle  & =E_{0}\left(\left\langle \alpha\right|\hat{a}\left|\alpha\right\rangle e^{-i\chi}+\left\langle \alpha\right|\hat{a}^{\dagger}\left|\alpha\right\rangle e^{i\chi}\right)\\
 & =E_{0}\left(\alpha e^{-i\chi}+\alpha^{*}e^{i\chi}\right)
\end{align}

\end_inset


\begin_inset Formula 
\begin{equation}
\left\langle \alpha\right|E\left|\alpha\right\rangle ^{2}=E_{0}^{2}\left(\alpha^{2}e^{-2i\chi}+\left(\alpha^{*}\right)^{2}e^{2i\chi}+2\left|\alpha\right|^{2}\right)
\end{equation}

\end_inset


\begin_inset Formula 
\begin{align}
\left\langle \alpha\right|E^{2}\left|\alpha\right\rangle  & =E_{0}^{2}\left\langle \alpha\right|\left(aae^{-2i\chi}+a^{\dagger}a^{\dagger}e^{2i\chi}+aa^{\dagger}+a^{\dagger}a\right)\left|\alpha\right\rangle \\
 & =E_{0}^{2}\left(\alpha^{2}e^{-2i\chi}+\left(\alpha^{*}\right)^{2}e^{2i\chi}+1+2\left|\alpha\right|^{2}\right)
\end{align}

\end_inset


\begin_inset Formula 
\begin{align}
\left(\Delta E\right)^{2} & =\left\langle E^{2}\right\rangle -\left\langle E\right\rangle ^{2}\\
 & =E_{0}^{2}
\end{align}

\end_inset


