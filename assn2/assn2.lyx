\begin_layout Description
(a) Classical oscillation
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
A\cos\left(\omega t+\varphi\right) & =A\mathrm{Re}\left[e^{i\left(\omega t+\varphi\right)}\right]\\
 & =A\mathrm{Re}\left[e^{i\varphi}\cos\omega t+e^{i\varphi}i\sin\omega t\right]\\
 & =A\left[\cos\varphi\cos\omega t-\sin\varphi\sin\omega t\right]
\end{align}

\end_inset


\end_layout

\begin_layout Description
(b) Position and momentum.
 
\begin_inset Formula 
\begin{align}
x & =\sqrt{\frac{\hbar}{2\omega}}\left(a+a^{\dagger}\right)\\
p & =-i\sqrt{\frac{\hbar\omega}{2}}\left(a-a^{\dagger}\right)
\end{align}

\end_inset


\begin_inset Formula 
\begin{equation}
\left\langle \alpha\right|x\left|\alpha\right\rangle =\sqrt{\frac{\hbar}{2\omega}}\left(\alpha+\alpha^{*}\right)
\end{equation}

\end_inset


\begin_inset Formula 
\begin{align}
\left\langle \alpha\right|x^{2}\left|\alpha\right\rangle  & =\frac{\hbar}{2\omega}\left\langle \alpha\right|aa+a^{\dagger}a^{\dagger}+aa^{\dagger}+a^{\dagger}a\left|\alpha\right\rangle \\
 & =\frac{\hbar}{2\omega}\left\langle \alpha\right|aa+a^{\dagger}a^{\dagger}+1+2a^{\dagger}a\left|\alpha\right\rangle \\
 & =\frac{\hbar}{2\omega}\left(1+\alpha^{2}+\left(\alpha^{*}\right)^{2}+2\left|\alpha\right|^{2}\right)\\
 & =\frac{\hbar}{2\omega}\left[1+\left(\alpha+\alpha^{*}\right)^{2}\right]
\end{align}

\end_inset


\begin_inset Formula 
\begin{equation}
\left(\Delta x\right)_{\mathrm{coherent}}=\sqrt{\frac{\hbar}{2\omega}}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
\left\langle \alpha\right|p\left|\alpha\right\rangle =-i\sqrt{\frac{\hbar\omega}{2}}\left(\alpha+\alpha^{*}\right)
\end{equation}

\end_inset


\begin_inset Formula 
\begin{align}
\left\langle \alpha\right|p^{2}\left|\alpha\right\rangle  & =-\frac{\hbar\omega}{2}\left\langle \alpha\right|aa+a^{\dagger}a^{\dagger}-\left(aa^{\dagger}+a^{\dagger}a\right)\left|\alpha\right\rangle \\
 & =-\frac{\hbar\omega}{2}\left(\alpha^{2}+\left(\alpha^{*}\right)^{2}-2\left|\alpha\right|^{2}-1\right)\\
 & =\frac{\hbar\omega}{2}\left[1-\left(\alpha+\alpha^{*}\right)^{2}\right]
\end{align}

\end_inset


\end_layout

