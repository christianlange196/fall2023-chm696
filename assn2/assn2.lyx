\begin_layout Standard
We can write 
\begin_inset Formula $\left(a^{\dagger}a\right)^{2}=a^{\dagger}aa^{\dagger}a=a^{\dagger}\left(1+a^{\dagger}a\right)a=a^{\dagger}a+a^{\dagger}a^{\dagger}aa$
\end_inset


\begin_inset Formula 
\begin{equation}
\left\langle n\right|H\left|n\right\rangle =\hbar\omega\left(n+\frac{1}{2}\right)
\end{equation}

\end_inset


\begin_inset Formula 
\begin{align}
\left\langle n\right|H^{2}\left|n\right\rangle  & =\left(\hbar\omega\right)^{2}\left\langle n\right|a^{\dagger}aa^{\dagger}a+a^{\dagger}a+\frac{1}{4}\left|n\right\rangle \\
 & =\left[\hbar\omega\left(n+\frac{1}{2}\right)\right]^{2}
\end{align}

\end_inset


\begin_inset Formula 
\begin{equation}
\left[\frac{\Delta H}{\left\langle H\right\rangle }\right]_{\mathrm{Fock}}=0
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
\left\langle \alpha\right|H\left|\alpha\right\rangle =\hbar\omega\left(\left|\alpha\right|^{2}+\frac{1}{2}\right)
\end{equation}

\end_inset


\begin_inset Formula 
\begin{align}
\left\langle \alpha\right|H^{2}\left|\alpha\right\rangle  & =\left(\hbar\omega\right)^{2}\left\langle \alpha\right|a^{\dagger}aa^{\dagger}a+a^{\dagger}a+\frac{1}{4}\left|\alpha\right\rangle \\
 & =\left(\hbar\omega\right)^{2}\left(\left|\alpha\right|^{4}+2\left|\alpha\right|^{2}+\frac{1}{4}\right)
\end{align}

\end_inset


\begin_inset Formula 
\begin{equation}
\left[\frac{\Delta H}{\left\langle H\right\rangle }\right]_{\mathrm{coherent}}=\sqrt{\frac{\left|\alpha\right|^{2}}{\left|\alpha\right|^{2}+\frac{1}{2}}}
\end{equation}

\end_inset


\end_layout

